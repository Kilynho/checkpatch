#!/bin/bash
# Script de prueba rápida: análisis y autofix unificado

# Volver al directorio del checkpatch
cd /home/kilynho/src/checkpatch/ || exit

# Ejecutar análisis con main.py
python3 main.py --analyze \
    --source-dir ~/src/kernel/linux/init \
    --checkpatch ~/src/kernel/linux/scripts/checkpatch.pl \
    --workers 4 \
    --html html/analyzer.html \
    --json-out json/checkpatch.json

# Ejecutar autofix
python3 main.py --fix \
    --json-input json/checkpatch.json \
    --html html/autofix.html \
    --json-out json/fixed.json
